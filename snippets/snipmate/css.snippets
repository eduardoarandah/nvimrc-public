snippet out outline all elements
  * {
    outline: 1px solid lightgray;
  }

snippet bb Border bottom
  border-bottom: 1px solid $0;

snippet trans Transition
  transition: ${1:opacity} ${2:100}ms ${3:linear};

snippet media media query
  @media(${1:min}-width: ${2:375}px){
    $0
  }

# tailwind

snippet twmd Tailwind md
  @screen md {
    $0
  }

snippet twlg Tailwind lg
  @screen lg {
    $0
  }

snippet twxl Tailwind xl
  @screen xl {
    $0
  }

snippet twxxl Tailwind xxl
  @screen xxl {
    $0
  }

snippet pseudo Pseudo element
  .$1 {
    position: relative;
  }
