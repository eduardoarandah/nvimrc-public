  }

snippet imgurl Postcss Tailwind image url in dist folder
  url('../images/${1:image.png}');

snippet grid Grid
  display: grid;
  grid-gap: 1rem;
  grid-template-columns: repeat(auto-fit,minmax(300px,1fr));

snippet lh line height
  line-height: 1$0;

snippet flex Flex
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;

snippet contain Contain
  max-width:$1;
  margin-left: auto;
  margin-right:auto;

snippet mlr Margin left, right
  margin-left: ${1:auto};
  margin-right: ${2:auto};

snippet tt Text transform
  text-transform: ${1:uppercase};

snippet bgi Background image
  background-image: url(../images/$1);
  background-size: cover;
  background-repeat: no-repeat;

snippet dummy dummy classes
  .dummy, .dummy * { outline: 1px dashed red; }
