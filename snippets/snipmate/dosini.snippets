snippet editorconfig .editorconfig example file
  ; https://github.com/editorconfig/editorconfig/wiki/EditorConfig-Properties
  root = true

  [*]
  charset = utf-8
  end_of_line = lf
  insert_final_newline = true
  indent_style = space
  indent_size = 4
  trim_trailing_whitespace = true

  [*.md]
  trim_trailing_whitespace = false

  [*.{yml,yaml}]
  indent_size = 2

  [*.vue]
  indent_size = 2
  max_line_length = off
